+part_title_page("Профиль")

mixin item_dialogue(logo,name,text,time,num,active)
	.item_dialogue(class=active onlick="location.href='/chat.html'")
		.content_logo
			.logo
				if(logo)
					img(src=logo)    
		.content_dialogue
			.content_text
				h2= name
				p= text
			.date
				p= time
				if(num)
					.num= num

