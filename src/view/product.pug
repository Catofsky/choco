        .leave_comment
          .title Пожалуйста, оцените этот товар
          .rate
            .one 1
            .two 2
            .three 3
            .four 4
            .five 5

        .leave_comment
          .title Оцените Белый ветер
          .rate
            .one 1
            .two 2
            .three 3
