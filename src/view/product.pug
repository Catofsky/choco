          textarea(placeholder='Оставить отзыв' rows='5')
          .btn оставить отзыв

      +part('rating_statistic', [30, 20, 3, 30, 10])

script(src='js/slider.min.js')
script.
  uSlider({
    preview: u('._preview'),
    slides: u('._slides'),
    wrapper: u('._slides_wrapper'),
    left_arrow: u('._left_arrow'),
    right_arrow: u('._right_arrow'),
    magnifier: u('._magnifier')
  });
  
script(src='coffee/tabs.js')
script.
  uTabs({
    tabs: u('._tabs'),
    container: u('._tabs_container')
  });
  
script(src='coffee/timer.js')
script.
  uTimer({
    timer: u('._timer')
  });
  
script(src='coffee/variants.js')
script.
  uVariants({
    variants: u('._variants')
  });
  
script(src='coffee/counter.js')
script.
  uCounter({
    count: u('._count'),
    num: u('._num'),
    add: u('._add'),
    sub: u('._sub')
  });
  
script(src='coffee/magnifier.js')
script.
  uMagnifier({
    magnifier: u('._magnifier')
  });
  
script(src='coffee/favorite.js')
script.
  uFavorite({
    favorite: u('._favorite')
  });

script(src='coffee/comment.js')
script.
  uComment({
    rating: u('.leave_comment .rate'),
    textarea: u('.leave_comment textarea'),
    btn: u('.leave_comment .btn'),
    container: u('.leave_comment')
  });

