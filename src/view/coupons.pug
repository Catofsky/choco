include _parts.pug
include _header.pug

+part_title_page("Профиль")

mixin item_dialogue(image,title,number_oreder,shop_name,option,status,time_date,time)
	.block_coupon
		.block_image
			img(src=image)
		.block_content
			.description_coupon
				.title
					a(href="#")
						p=title
				.content
					.item
						p Номер заказа:
						p= "№" + number_oreder 
					.item
						p Магазин:
						div
							i(class="material-icons") store_mall_directory
							a(href="№")= shop_name
					.item
						p Вариант:
						p= option
					.item
						p Статус:
						div
							i(class="material-icons done")= status
							p Завершено
					.item
						p Время:
						div
							i(class="material-icons") assignment_turned_in
							p= time_date
							i(class="material-icons") access_time
							p= time
			.interaction_coupon
				.block_use_coupon
					a(href="#")
						i(class="material-icons active") favorite
					a(href="#")
						i(class="material-icons") share
					a(href="#")
						i(class="material-icons") star
					a(href="#")
						i(class="material-icons") email
					a(href="#")
						i(class="material-icons") refresh
					a(href="#")
						i(class="material-icons") delete

