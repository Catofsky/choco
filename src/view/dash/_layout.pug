doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        block title
            title Chocokiller

        link(rel='stylesheet' href='css/dashboard/dash.min.css')
        link(rel='stylesheet' href='font/material-icons.css')
        block scripts
            script(src='js/umbrella.min.js')
            script window.parts = {};

    body
        include _header
        -
            var menu = [
                { title: 'Главная', icon: 'view_list', href: '#' },
                { title: 'Заказы', icon: 'store', href: '#' },
                { title: 'Подписчики', icon: 'view_list', href: '#', count: 12 },
                { title: 'Сотрудники', icon: 'favorite', href: '#' },
                { title: 'Магазин', icon: 'share', href: '#' },
                { title: 'Товары', icon: 'store', href: '#' },
                { title: 'Услуги', icon: 'view_list', href: '#' },
                { title: 'Акции', icon: 'people', href: '#' }
            ]

        .side_menu
            .menu
                ul
                    each item in menu
                        li
                            a(href=item.href)
                                i.material-icons._toggle_view_list= item.icon
                                span= item.title
                            - if (item.count) 
                                .num= item.count
 
        block content
        include _footer.pug
